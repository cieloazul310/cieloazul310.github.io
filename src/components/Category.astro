---
import type { CollectionEntry } from "astro:content";
import { Paper, Link, PaperLink, anchor } from "@cieloazul310/astro-sarkara";
import { css } from "styled-system/css";

interface Props {
  category: CollectionEntry<"category">;
}
const { category } = Astro.props;
---

<Paper as="article">
  <h1
    class={css({
      textStyle: "headings",
      fontSize: ["lg", "xl", "2xl"],
      mb: 2,
    })}
  >
    <Link
      className={css({
        _hover: {
          textDecoration: "underline",
        },
      })}
      href={`/categories/${category.id}`}
    >
      {category.data.name}
    </Link>
  </h1>
  {category.data.description && <p>{category.data.description}</p>}
  {
    category.data.url && (
      <Link class={anchor} href={category.data.url}>
        {category.data.url}
      </Link>
    )
  }
  <div class={css({ display: "flex", flexDirection: "column", mt: 4 })}>
    <PaperLink href={`/categories/${category.id}`}>記事一覧</PaperLink>
  </div>
</Paper>
